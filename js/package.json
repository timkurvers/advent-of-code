    "@timkurvers/eslint-config": "^3.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.28.0",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "nodemon": "^2.0.20"
  }
