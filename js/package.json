    "@timkurvers/eslint-config": "^2.1.0",
    "babel-jest": "^25.3.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^26.6.0",
    "jest-config": "^26.6.0",
    "nodemon": "^2.0.15"
